{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "nix-env -i cmake && echo Building your application...",
    "installCommand": [
      "apt-get update",
      "apt-get install -y cmake"
    ]
  },
  "deploy": {
    "startCommand": "streamlit run main:app --bind \"[::]:$PORT\"",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "never"
  }
}
